      <script>
  const openPopup = document.getElementById('open-engraving-popup');
  const modal = document.getElementById('engraving-modal');
  const closePopup = document.getElementById('close-engraving-popup');
  const saveEngraving = document.getElementById('save-engraving');

  openPopup.addEventListener('click', () => {
    modal.style.display = 'flex';
  });

  closePopup.addEventListener('click', () => {
    modal.style.display = 'none';
  });

  saveEngraving.addEventListener('click', () => {
    const text = document.getElementById('engraving-text').value;
    const color = document.querySelector('input[name="properties[Engraving Color]"]:checked');

    if (!text || !color) {
      alert('Please enter engraving text and select a color.');
      return;
    }

    modal.style.display = 'none';
  });
</script>





      
